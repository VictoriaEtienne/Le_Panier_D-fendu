<div class="inner-content">
    <% if shop.photo.attached? %>
      <%= cl_image_tag shop.photo.key, alt: "Popup Image", class: "img-pop"%>
    <% else %>
      <%= image_tag "magasin_bio.jpg", alt: "Popup Image", class: "img-pop"%>
    <% end %>
    <div class="text-pop">
      <h4 class="card-title-roboto"><%= shop.name %></h4>
      <p class="card-text-quicksand"><%= shop.address %></p>
      <% if shop_open?(shop) %>
        <p class="shop-status open">Actuellement ouvert</p>
      <% else %>
        <p class="shop-status closed">Actuellement ferm√©</p>
      <% end %>
    </div>
    <%= link_to "Voir plus", shop_path(shop), class: "btn-sm" %>
  </div>
