<div class="barcode-scanner-container position-relative h-100vh" data-controller="barcode geolocation">
  <div class="position-absolute top-50 start-0 -translate-y-50 w-100 z-1 ">
    <div class="d-flex justify-content-center">

      <button class="btn btn-success" type="button" disabled>
        <span class="spinner-border spinner-border-sm" aria-hidden="true"></span>
        <span role="status">Loading...</span>
      </button>
    </div>
  </div>

  <div class="video-height position-absolute top-50 start-0 -translate-y-50 h-100">
  </div>
  <%= simple_form_for @history,
                      html: {
                        class: "d-none",
                        data: {
                          barcode_target: 'form'
                        }
                      } do |f| %>
    <%= f.input :barcode,
                input_html: {
                  data: {
                    barcode_target: "codeInput"
                  }
                } %>
    <%= f.input :lat,
                input_html: {
                  data: {
                    geolocation_target: 'latInput'
                  }
                } %>
    <%= f.input :lng,
                input_html: {
                  data: {
                    geolocation_target: 'lngInput'
                  }
                } %>
  <% end %>
</div>
